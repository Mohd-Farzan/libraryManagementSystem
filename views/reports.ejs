  <!-- Reports Section -->
  <div class="container py-5">
    <h2 class="text-center mb-4">Library Reports</h2>
    <h3>Books Report</h3>
    <table class="table table-bordered">
      <thead class="table-dark">
        <tr>
          <th>Title</th>
          <th>Category</th>
          <th>Borrowed By</th>
        </tr>
      </thead>
      <tbody>
        <% books.forEach(book => { %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.category %></td>
          <td><%= book.borrowedBy ? book.borrowedBy.name : 'N/A' %></td>
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <footer class="bg-dark text-white py-4">
    <div class="container text-center">
